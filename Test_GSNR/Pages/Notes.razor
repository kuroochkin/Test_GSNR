@page "/notes"

<div class="container-fluid">
    <div class="row">
        <div class="col">
            <h2>Заметки</h2>

            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Название</th>
                        <th scope="col">Описание</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                @foreach(var item in notes)
                {
                    <tbody>
                        <tr>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                <button class="btn btn-danger" @onclick="(() => Delete(item))">Удалить</button>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>

            <div class="row">
                <div class="col">
                    <input class="form-control" placeholder="Введите название заметки" @bind="title"/>
                </div>
                <div class="col">
                    <input class="form-control" placeholder="Введите содержание заметки" @bind="description"/>
                </div>
                <div class="col">
                    <button class="btn btn-success" @onclick="AddNote">Добавить</button>
                </div>
            </div>
            
        </div>
    </div>
</div>

@code {
    private IList<NoteItem> notes = new List<NoteItem>();

    private string title = null!;

    private string description = null!;

    private void AddNote()
    {
        if (!string.IsNullOrWhiteSpace(title) && !string.IsNullOrWhiteSpace(description))
        {
            notes.Add(new NoteItem() 
                {   
                    Title = title, 
                    Description = description 
                });

            title = string.Empty;
            description = string.Empty;
        }
    }

    private void Delete(NoteItem noteItem)
    {
        notes.Remove(noteItem);
    }
}
